{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": true,
        "noEmit": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": "src",
        "isolatedModules": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "types": [
            // "src/@types/**",
            "jest"
        ]
    },
    "include": [
        "src/**/*"
    ]
}